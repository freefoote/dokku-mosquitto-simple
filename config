#!/usr/bin/env bash
export MOSQUITTO_IMAGE=${MOSQUITTO_IMAGE:="freefoote/mosquitto-simple"}
export MOSQUITTO_IMAGE_VERSION=${MOSQUITTO_IMAGE_VERSION:="1.4.4"}
export MOSQUITTO_ROOT=${MOSQUITTO_ROOT:="/var/lib/dokku/services/mosquitto-simple"}

export PLUGIN_COMMAND_PREFIX="mosquitto-simple"
export PLUGIN_DATA_ROOT=$MOSQUITTO_ROOT
export PLUGIN_DATASTORE_PORTS=(1883)
export PLUGIN_DEFAULT_ALIAS="MQTT"
export PLUGIN_IMAGE=$MOSQUITTO_IMAGE
export PLUGIN_IMAGE_VERSION=$MOSQUITTO_IMAGE_VERSION
export PLUGIN_SCHEME="mqtt"
export PLUGIN_SERVICE="Mosquitto MQTT"
